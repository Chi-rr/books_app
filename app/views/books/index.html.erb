<h1><%= t "Books" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t "user_name" %></th>
      <th><%= t "title" %></th>
      <th><%= t "memo" %></th>
      <th><%= t "author" %></th>
      <th><%= t "picture" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.user.name %></td>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to "#{t "show"}", book %></td>
        <% if book.user == current_user %>
          <td><%= link_to "#{t "edit"}", edit_book_path(book) %></td>
          <td><%= link_to "#{t "destroy"}", book, method: :delete, data: { confirm: t('Are you sure?') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t "New Book"}", new_book_path %><br>
<%= paginate @books %><br>
<%= page_entries_info @books %>
