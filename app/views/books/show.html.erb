<h1><%= t "Show Book" %></h1>

<div class="show_page">
  <strong><%= t "title" %>:</strong>
  <%= @book.title %>
</div>

<div class="show_page">
  <strong><%= t "memo" %>:</strong>
  <%= @book.memo %>
</div>

<div class="show_page">
  <strong><%= t "author" %>:</strong>
  <%= @book.author %>
</div>

<div class="show_page">
  <strong><%= t "picture" %>:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</div>

<% if @book.user == current_user %>
  <%= link_to t("edit"), edit_book_path(@book) %> |
<% end %>

<%= link_to t("back"), books_path %>

<%= render partial: "comments/comments", locals: {commentable: @book} %>
<%= render partial: "comments/form", locals: {commentable: @book} %>
