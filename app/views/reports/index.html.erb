<h1><%= t "Reports" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t "user_name" %></th>
      <th><%= t "title" %></th>
      <th><%= t "body" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.user.name %></td>
        <td><%= report.title %></td>
        <td><%= report.body %></td>
        <td><%= link_to t("show"), report %></td>
        <% if report.user == current_user %>
          <td><%= link_to t("edit"), edit_report_path(report) %></td>
          <td><%= link_to t("destroy"), report, method: :delete, data: { confirm: t("Are you sure?") } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("New report"), new_report_path %><br>
<%= paginate @reports %><br>
<%= page_entries_info @reports %>
