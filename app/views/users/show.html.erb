<h1>マイページ</h1>
<div class="name">
  <h2>名前</h2>
  <%= current_user.name %>
</div>

<div class="avatar">
  <h2>プロフィール写真</h2>
  <%= image_tag @user.avatar if @user.avatar.attached?%>
</div>

<div class="email">
  <h2>Eメール</h2>
  <%= current_user.email %>
</div>

<div class="postal_code">
  <h2>郵便番号</h2>
  <%= current_user.postal_code %>
</div>

<div class="address">
  <h2>住所</h2>
  <%= current_user.address %>
</div>

<div class="profile">
  <h2>プロフィール</h2>
  <%= current_user.profile %>
</div>

<%= link_to "編集", edit_user_registration_path %>
